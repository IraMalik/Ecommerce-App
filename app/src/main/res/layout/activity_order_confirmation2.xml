<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Username Check -->
        <ImageView
            android:id="@+id/imgUsernameCheck"
            android:layout_width="445dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@drawable/tick" />

        <!-- Order Confirmed Text -->
        <TextView
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Order Confirmed!"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Username Text -->
        <TextView
            android:id="@+id/textUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Address Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Address"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Payment Method Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/imgPaymentMethodCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tick"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textPaymentMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Payment Method"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Total Amount Text -->
        <TextView
            android:id="@+id/textTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Total Amount: â‚¹1500"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Estimated Delivery Date -->
        <TextView
            android:id="@+id/textEstimatedDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Estimated Delivery Date: 25th April 2025"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Confirm Order Button -->
        <Button
            android:id="@+id/btnConfirmOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="14dp"
            android:text="Confirm Order"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/brown" />
    </LinearLayout>
</ScrollView>
